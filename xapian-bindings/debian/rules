PYVER_FULL := $(subst ., ,$(word 2,$(shell python -V 2>&1)))
PYVER      := $(word 1,$(PYVER_FULL)).$(word 2,$(PYVER_FULL))

# The default python version
PYTHON_VERSION_MAIN := $(PYVER)

# The python versions to build for
PYTHON_VERSIONS := 2.1 2.2 2.3 2.4

export DH_OPTIONS

export DEB_HOST_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
export DEB_BUILD_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

ifeq ($(DEB_BUILD_GNU_TYPE), $(DEB_HOST_GNU_TYPE))
	confflags += --build $(DEB_HOST_GNU_TYPE)
else
	confflags += --build $(DEB_BUILD_GNU_TYPE) --host $(DEB_HOST_GNU_TYPE)
endif

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	confflags += CFLAGS="-O0" CXXFLAGS="-O0"
else
	confflags += CFLAGS="-O2" CXXFLAGS="-O2"
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

# Build depends needed for python
PYTHON_BUILD_DEPENDS=$(PYTHON_VERSIONS:%=python%-dev,)

commonconfflags := \
	$(confflags) \
	--prefix=/usr \
	--mandir=\$${prefix}/share/man \
	--infodir=\$${prefix}/share/info \
	--sysconfdir=/etc


maint: debian/control

maintclean: clean
	rm -f debian/control

debian/control: debian/rules debian/control.in debian/control-python.in
	test -n "$(PYTHON_VERSION_MAIN)" || \
		( echo "python package doesn't seem to be installed" ; exit 1 )
	cat debian/control.in | \
		sed "s/@PYTHON_VERSION_MAIN@/$(PYTHON_VERSION_MAIN)/g" | \
		sed "s/@PYTHON_BUILD_DEPENDS@/$(PYTHON_BUILD_DEPENDS)/g" \
		> debian/control
	for v in $(PYTHON_VERSIONS); do \
		cat debian/control-python.in | \
			sed "s/@PYTHON_VERSION@/$$v/g" \
			>> debian/control; \
	done

configure: debian/configure-stamp
debian/configure-stamp:
	dh_testdir

	# Use the latest config.sub and config.guess from the autotools-dev
	# package.
	rm -f config.sub config.guess
	ln -s /usr/share/misc/config.sub config.sub
	ln -s /usr/share/misc/config.guess config.guess

	for v in $(PYTHON_VERSIONS); do \
	    set -e; \
	    mkdir -p build-python$$v; \
	    cd build-python$$v; \
	    ../configure $(commonconfflags) --with-python \
	     PYTHON=/usr/bin/python$$v; \
	    cd ..; \
	done

	touch $@

build: configure debian/build-stamp
debian/build-stamp:
	dh_testdir
	for v in $(PYTHON_VERSIONS); do \
	    set -e; \
	    $(MAKE) -C build-python$$v; \
	done
	touch $@

install: DH_OPTIONS=
install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Install the files into debian/tmp
	for v in $(PYTHON_VERSIONS); do \
	    set -e; \
	    $(MAKE) -C build-python$$v DESTDIR=$(CURDIR)/debian/tmp install; \
	done

	# Reads the *.install files to decide where to install everything
	dh_install --sourcedir=debian/tmp --list-missing --exclude=.pyc

binary: binary-arch binary-indep
binary-indep: DH_OPTIONS=-i
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installman
	dh_installchangelogs ChangeLog
	dh_compress
	dh_fixperms
	dh_python
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch: DH_OPTIONS=-a
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installman
	dh_installchangelogs ChangeLog
	dh_strip
	dh_link
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_python
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

clean:
	dh_testdir
	dh_testroot
	for v in $(PYTHON_VERSIONS); do \
	    set -e; \
	    rm -rf build-python$$v; \
	done
	rm -f config.sub config.guess
	dh_clean
	rm -f debian/build-stamp debian/configure-stamp

.PHONY: maint maintclean configure build install binary binary-arch binary-indep clean
