# The python versions to build for
ifeq ($(COMPONENT), unstable)
# Debian unstable doesn't have Python 2.1 or 2.2
PYTHON_VERSIONS := 2.3 2.4
else
PYTHON_VERSIONS := 2.1 2.2 2.3 2.4
endif

# Component we're building packages for
COMPONENT ?= unknown

# The PHP versions to build for
ifeq ($(COMPONENT), stable)
# Debian stable doesn't have PHP5
PHP_VERSIONS := 4
else
PHP_VERSIONS := 4 5
endif

export DH_OPTIONS

export DEB_HOST_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
export DEB_BUILD_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

ifeq ($(DEB_BUILD_GNU_TYPE), $(DEB_HOST_GNU_TYPE))
	confflags += --build $(DEB_HOST_GNU_TYPE)
else
	confflags += --build $(DEB_BUILD_GNU_TYPE) --host $(DEB_HOST_GNU_TYPE)
endif

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	confflags += CFLAGS="-O0" CXXFLAGS="-O0"
else
	confflags += CFLAGS="-O2" CXXFLAGS="-O2"
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

# Build depends needed for python
PYTHON_BUILD_DEPENDS=$(PYTHON_VERSIONS:%=python%-dev,)

# Build depends needed for PHP
PHP_BUILD_DEPENDS=$(PHP_VERSIONS:%=php%-dev,)

commonconfflags := \
	$(confflags) \
	--prefix=/usr \
	--mandir=\$${prefix}/share/man \
	--infodir=\$${prefix}/share/info \
	--sysconfdir=/etc


maint: debian/control

maintclean: clean
	rm -f debian/control

debian/control: debian/rules debian/control.in debian/control-python.in
	cat debian/control.in | \
		sed "s/@PYTHON_BUILD_DEPENDS@/$(PYTHON_BUILD_DEPENDS)/g" | \
		sed "s/@PHP_BUILD_DEPENDS@/$(PHP_BUILD_DEPENDS)/g" \
		> debian/control
	for v in $(PYTHON_VERSIONS); do \
		cat debian/control-python.in | \
			sed "s/@PYTHON_VERSION@/$$v/g" \
			>> debian/control; \
	done
	for v in $(PHP_VERSIONS); do \
		cat debian/control-php.in | \
			sed "s/@PHP_VERSION@/$$v/g" \
			>> debian/control; \
	done

configure: debian/configure-stamp
debian/configure-stamp:
	dh_testdir

	# Use the latest config.sub and config.guess from the autotools-dev
	# package.
	rm -f config.sub config.guess
	ln -s /usr/share/misc/config.sub config.sub
	ln -s /usr/share/misc/config.guess config.guess

	for v in $(PYTHON_VERSIONS); do \
	    set -e; \
	    mkdir -p build-python$$v; \
	    cd build-python$$v; \
	    ../configure $(commonconfflags) --with-python \
	     PYTHON=/usr/bin/python$$v; \
	    cd ..; \
	done

	for v in $(PHP_VERSIONS); do \
	    c=/usr/bin/php-config$$v; \
	    if test -x $$c ; then \
		set -e; \
		mkdir -p build-php$$v; \
		cd build-php$$v; \
		../configure $(commonconfflags) --with-php PHP_CONFIG=$$c; \
		cd ..; \
	    fi \
	done

	touch $@

build: configure debian/build-stamp
debian/build-stamp:
	dh_testdir
	for v in $(PYTHON_VERSIONS); do \
	    set -e; \
	    $(MAKE) -C build-python$$v; \
	done
	for v in $(PHP_VERSIONS); do \
	    if test -x /usr/bin/php-config$$v ; then \
		set -e; \
		$(MAKE) -C build-php$$v; \
	    fi \
	done
	touch $@

install: DH_OPTIONS=
install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Install the files into debian/tmp
	for v in $(PYTHON_VERSIONS); do \
	    set -e; \
	    $(MAKE) -C build-python$$v DESTDIR=$(CURDIR)/debian/tmp install; \
	done
	# These .py scripts don't have a #! line and shouldn't be executable.
	# Fixed in SVN after 0.9.5 - this bodge can be removed for the next
	# release (FIXME).
	chmod 644 $(CURDIR)/debian/tmp/usr/lib/python*/site-packages/*.py

	for v in $(PHP_VERSIONS); do \
	    c=/usr/bin/php-config$$v; \
	    if test -x $$c ; then \
		set -e; \
		$(MAKE) -C build-php$$v DESTDIR=$(CURDIR)/debian/tmp install; \
	    fi \
	done

	# Reads the *.install files to decide where to install everything
	dh_install --sourcedir=debian/tmp --fail-missing --exclude=.pyc

binary: binary-arch binary-indep
binary-indep: DH_OPTIONS=-i
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installdebconf
	dh_installman
	dh_installchangelogs ChangeLog
	dh_compress
	dh_fixperms
	dh_python
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch: DH_OPTIONS=-a
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installman
	dh_installchangelogs ChangeLog
	dh_strip
	dh_link
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_python
	dh_installdeb
	dh_shlibdeps

	for v in $(PHP_VERSIONS); do \
	    c=/usr/bin/php-config$$v; \
	    if test -x $$c ; then \
		set -e; \
		echo "php$$v:Depends=phpapi-`$$c --phpapi`, php$$v-common" >> debian/php$$v-xapian.substvars; \
	    fi \
	done

	dh_gencontrol
	dh_md5sums
	dh_builddeb

clean:
	dh_testdir
	dh_testroot
	for v in $(PYTHON_VERSIONS); do \
	    set -e; \
	    rm -rf build-python$$v; \
	done
	for v in $(PHP_VERSIONS); do \
	    set -e; \
	    rm -rf build-php$$v; \
	done
	debconf-updatepo
	rm -f config.sub config.guess
	dh_clean
	rm -f debian/build-stamp debian/configure-stamp

.PHONY: maint maintclean configure build install binary binary-arch binary-indep clean
