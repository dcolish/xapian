# This program is distributed in the hope that it will be useful,
# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
# GNU General Public License for more details.
#
# You should have received a copy of the GNU General Public License
# along with this program; if not, write to the Free Software
# Foundation, Inc., 51 Franklin St, Fifth Floor, Boston, MA  02110-1301
# USA

trap 'echo "$0 failed"' EXIT
set -e

curdir=`pwd`

# cd to srcdir if we aren't already there.
srcdir=`echo "$0"|sed 's!/*[^/]*$!!'`
case $srcdir in
  ""|.)
    srcdir=. ;;
  *)
    cd "$srcdir" ;;
esac

if [ "$1" = "--clean" ] ; then
  rm -rf INST BUILD
fi

test -d INST || mkdir INST
instdir=`pwd`/INST

test -d BUILD || mkdir BUILD
cd BUILD

do_build_if_required() {
  package=$1
  basename=$package-$2
  checksum=$3
  tarball=$basename.tar.bz2
  stamp=$package.stamp

  # Download the tarball if required.
  if [ ! -f "$tarball" ] ; then
    wget "ftp://ftp.gnu.org/gnu/$package/$tarball"
  fi

  if [ -f "$stamp" ] ; then
    find_stdout=`find "$stamp" -newer "$tarball" -print`
  else
    find_stdout=
  fi

  if [ -z "$find_stdout" ] ; then
    # Verify tarball's checksum.
    echo "$checksum  $tarball"|sha1sum -c

    for f in "$package"-* ; do
      [ "$f" = "$tarball" ] || rm -rf "$f"
    done

    bzip2 -dc "$tarball"| tar xf -

    cd "$basename"
    ./configure --prefix="$instdir"
    make
    make install
    cd ..
    rm -rf "$basename"

    touch "$stamp"
  fi
}

do_build_if_required autoconf 2.62 de2b6f57da07427794c56e25844e31f35fc46755
do_build_if_required automake 1.10.1 cd2e0f7054d4edc75cbf87cd8a92962b3b417b74
do_build_if_required libtool 2.2.4 bc485fd07c8b12820234240e9ef41dba693af2b7

for t in autoreconf autoconf autoheader autom4te automake aclocal libtoolize
do
   var=`echo "$t"|tr a-z A-Z`
   eval "$var=\"\$instdir\"/bin/$t;export $var"
done

trap - EXIT

cd "$curdir"
exec "$srcdir/bootstrap"
