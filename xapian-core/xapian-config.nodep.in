#! /bin/sh
# @configure_input@
# xapian-config.in: This file is processed by configure to
# generate xapian-config

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@
dependency_libs="@dependency_libs@"
stlport_cflags="@STLPORT_CFLAGS@"

usage()
{
    cat <<EOF
Usage: xapian-config [OPTION]

Known values for OPTION are:

  --check		check for existence of xapian
  --libs		print library linking information
  --cflags		print pre-processor and compiler flags
  --prefix              set prefix
  --exec-prefix         set executable prefix (must also specify a --prefix)
  --uninst              this is from an uninstalled version of Xapian
  --help		display this help and exit successfully
  --version		output version information

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

echo_cflags=false
echo_libs=false
prefix_set=false
exec_prefix_set=false
uninst=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --prefix=*)
	prefix=$optarg
	prefix_set=true
	;;

    --prefix)
	echo $prefix
	;;

    --exec-prefix=*)
	exec_prefix=$optarg
	exec_prefix_set=true
	;;

    --exec-prefix)
	echo $exec_prefix
	;;

    --uninst)
        uninst=true
       ;;

    --version)
	echo xapian @VERSION@
	exit 0
	;;

    --help)
	usage 0
	;;

    --cflags)
	echo_cflags=yes
       	;;

    --libs)
	echo_libs=yes
       	;;

    --check)
	;;

    *)
	usage 1 1>&2
	exit 1
	;;
    esac
    shift
done

if test "$prefix_set" = "true"; then
    includedir=${prefix}
    libdir=${prefix}

fi

if test "$exec_prefix_set" = "true"; then
    if test "$prefix_set" = "true"; then
	libdir=${exec_prefix}
    else
	usage 1 1>&2
	exit 1
    fi
fi

if test "$prefix_set" = "true"; then
    if test -d "${includedir}/include"; then
        includedir="${includedir}/include"
    fi

    if test -d "${libdir}/lib"; then
	libdir="${libdir}/lib"
    else
        if test -d "${libdir}/.libs"; then
            libdir="${libdir}/.libs"
        fi
    fi
fi

if test "$echo_cflags" = "yes"; then
    echo $stlport_cflags -I$includedir
fi

if test "$echo_libs" = "yes"; then
    if test "$uninst" = "true"; then
       echo $exec_prefix/libxapian.la $dependency_libs
    else
       echo -L$libdir -lxapian $dependency_libs
    fi
fi

exit 0
