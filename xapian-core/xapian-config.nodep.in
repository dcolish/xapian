#! /bin/sh
# @configure_input@

prefix="@prefix@"
exec_prefix="@exec_prefix@"
libdir="@libdir@"
includedir="@includedir@"

usage()
{
    cat <<EOF
Usage: xapian-config [OPTION]...

Known values for OPTION are:

  --libs		print library linking information
  --cxxflags		print pre-processor and compiler flags
  --help		display this help and exit successfully
  --version		output version information

EOF

    exit $1
}

if test 0 = "$#"; then
    usage 1
fi

while test 0 != "$#"; do
    case "$1" in
    -*=*) optarg="`echo \"$1\" | sed 's/[-_a-zA-Z0-9]*=//'`" ;;
    *) optarg= ;;
    esac

    case "$1" in
    --version)
	echo xapian @VERSION@
	exit 0
	;;

    --help)
	usage 0
	;;

    --cxxflags)
	case "$includedir" in
	/usr/include|/usr/include/c++)
	    echo "@STLPORT_CXXFLAGS@" ;;
	*)
	    echo "@STLPORT_CXXFLAGS@ -I$includedir" ;;
	esac
       	;;

    --libs)
	case "$libdir" in
	/usr/lib)
	    echo "-lxapian @dependency_libs@" ;;
	*)
	    echo "-L$libdir -lxapian @dependency_libs@" ;;
	esac
       	;;

    *)
	usage 1 1>&2
	exit 1
	;;
    esac
    shift
done
exit 0
