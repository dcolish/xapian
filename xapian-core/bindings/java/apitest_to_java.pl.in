use strict;
use Carp;
use ToJava;
use apitest_parser;

my (@succeeded, @failed);
my (%want_name);
my ($want_allnames) = (1);

# FIXME: share most of this code with other language backends
$main::verbose = 0;

while (@ARGV) {
    $_ = shift @ARGV;
    if ($_ =~ /^-v$/) {
        $main::verbose = 1;
    } else {
        if ($_ !~ /^test_/) {
	    $_ = "test_" . $_;
	}
	$want_name{$_} = 1;
	$want_allnames = 0;
    }
}

open(OUTPUT, ">ApiTestFuncs.java") or die "Can't open ApiTestFuncs.java ($!)\n";
my $parser = new apitest_parser(new ToJava());
print OUTPUT $parser->make_comment("*** This file was autogenerated by apitest_to_java.pl ***");
print OUTPUT $parser->preamble();

while (<STDIN>) {
    chomp;
    if (/$apitest_parser::func_start_regex/o) {
	my $name = $1;
	if ($want_allnames || exists($want_name{$name})) {
	    my $funcdef;
	    eval {
		$funcdef = $parser->parse_function($_);
		if (defined $funcdef) {
		    print OUTPUT $funcdef;
		    push @succeeded, $name;
		} else {
		    push @failed, $name;
		}

#print $funcdef;
	    };
	    if ($@) {
		push @failed, $name;

                print OUTPUT $parser->make_comment("*** UNTRANSLATED FUNCTION: $name");
		print STDERR "Parse of $name failed: $@\n";
	    }
	}
    }
}

print OUTPUT $parser->prologue();
print scalar @succeeded, " successful translations: ", join(' ', @succeeded), "\n\n";
print scalar @failed, " failed translations: ", join(' ', @failed), "\n";
